{% extends 'base.html.twig' %}

{% block title %}Tareas por hacer{% endblock %}

{% block body %}
    <h1>Tareas por hacer</h1>
    {% include 'comunes/_mensajes.html.twig' %}
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Descripci√≥n</th>
            <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for index, tarea in tareas %}
        <tr>
            <th scope="row">{{ index + 1 }}</th>
            <td>{{ tarea.descripcion }}</td>
            <td>
                <a href="{{ path('app_editar_tarea_params', {'id': tarea.id}) }}" class="btn btn-primary">Editar</a>
                <a href="{{ path('app_eliminar_tarea', {'id': tarea.id}) }}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay tareas por hacer</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
